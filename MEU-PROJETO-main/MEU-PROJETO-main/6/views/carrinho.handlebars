<div class="checkout-wrapper">
    <div class="checkout-card">
        <div class="checkout-header">
            <span class="check-icon">‚úÖ</span>
            <h2>Confirme seu Pedido</h2>
        </div>
        <hr>

        <div class="resumo-produto-box">
            {{#if produto.imagem}}
                <img src="{{produto.imagem}}" alt="{{produto.nome}}" class="img-resumo">
            {{else}}
                <p>‚ö†Ô∏è Erro ao carregar imagem</p>
            {{/if}}
            
            <div class="resumo-texto">
                <p><strong>Planta:</strong> {{produto.nome}}</p>
                <p><strong>Valor:</strong> <span class="valor-verde">R$ {{produto.preco}}</span></p>
            </div>
        </div>

        <div class="checkout-acoes">
            <div class="qtd-seletor">
                <label>Quantidade:</label>
                <input type="number" id="quantidade" value="1" min="1">
            </div>
            
            <button class="btn-adicionar-carrinho" onclick="adicionarAoCarrinho()">
                Adicionar ao carrinho
            </button>
            
            <a href="/" class="link-voltar">‚Üê Continuar comprando</a>
        </div>
    </div>
</div>

<script>
function adicionarAoCarrinho() {
    // Salva no navegador que h√° 1 item no carrinho
    localStorage.setItem('itensCarrinho', '1');
    
    // Alerta de sucesso
    alert("Adicionado com sucesso!");

    // Rola para o topo para ver o menu
    window.scrollTo({ top: 0, behavior: 'smooth' });
    
    // Atualiza o texto do menu manualmente para o usu√°rio ver na hora
    const linkCarrinho = document.querySelector('a[href="/carrinho"]');
    if(linkCarrinho) {
        linkCarrinho.innerHTML = "üõí Carrinho (1)";
    }
}
</script>